{
  "version": 2,
  "name": "my-url-shortener",
  "builds": [
    {
      "src": "server.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/",           
      "dest": "index.html"
    },
    {
      "src": "/styles.css",     
      "dest": "styles.css"
    },
    {
      "src": "/script.js",      
      "dest": "script.js"
    },
    {
      "src": "/(.*)",      
      "dest": "server.js"
    }
  ]
}